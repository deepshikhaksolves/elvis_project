<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--    Used for sale order view-->
    <record id="sale_order_product_hover_view" model="ir.ui.view">
        <field name="name">sale.order.product.hover.view</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_id']"
                   position="attributes">
                <attribute name="widget">product_details_on_hover</attribute>
            </xpath>
        </field>
    </record>
</odoo>
