<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--    On Purchase settings-->
    <record id="res_config_settings_view_form_purchase_extended" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.purchase.extend</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="purchase.res_config_settings_view_form_purchase"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='purchase_setting_container']" position="after">
                 <h2>Quick View Product Hover</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="purchase_enable_product_info"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="purchase_enable_product_info"/>
                            </div>
                        </div>
                    </div>
            </xpath>
        </field>
    </record>
    <!--    On Sale management settings-->
    <record id="res_config_settings_view_form_sale_management_extended" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.sale.management.extend</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='catalog_setting_container']" position="after">
                 <h2>Quick View Product Hover</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="sale_enable_product_info"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="sale_enable_product_info"/>
                            </div>
                        </div>
                    </div>
            </xpath>
        </field>
    </record>
    <!--    On Account settings-->
    <record id="res_config_settings_view_form_account_extended" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.account.extend</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='default_taxes_setting_container']" position="after">
                 <h2>Quick View Product Hover</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="account_enable_product_info"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="account_enable_product_info"/>
                            </div>
                        </div>
                    </div>
            </xpath>
        </field>
    </record>
</odoo>