<?xml version="1.0" encoding="utf-8"?>
<odoo>
<!--    Used for invoice , credit note's , refund and vendor bill's view-->
    <record id="account_move_product_hover_view" model="ir.ui.view">
        <field name="name">account.move.product.hover.view</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']"
                   position="attributes">
                <attribute name="widget">product_details_on_hover</attribute>
            </xpath>
        </field>
    </record>
</odoo>